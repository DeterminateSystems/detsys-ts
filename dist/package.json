        "@actions/cache": "^3.2.4",
        "@actions/core": "^1.10.1",
        "@actions/exec": "^1.1.1",
        "@actions/github": "^5.1.1",
        "fetch-retry": "^5.0.6",
        "got": "^14.2.1",
        "string-argv": "^0.3.2",
        "uuid": "^9.0.1"
