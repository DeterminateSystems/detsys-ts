{
  "name": "detsys-ts",
  "version": "1.0.0",
  "description": "TypeScript goodies for DetSys projects",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-fmt": "prettier --check .",
    "format": "prettier --write .",
    "lint": "eslint src/**/*.ts",
