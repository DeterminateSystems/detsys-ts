{
  "name": "detsys-ts",
  "version": "1.0.0",
  "description": "TypeScript goodies for DetSys projects",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-fmt": "prettier --check .",
    "format": "prettier --write .",
    "lint": "eslint src/**/*.ts",
    "docs": "typedoc",
    "test": "vitest --watch false",
    "test-dev": "vitest",
    "all": "rm -rf dist && pnpm run format && pnpm run lint && pnpm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DeterminateSystems/detsys-ts.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DeterminateSystems/detsys-ts/issues"
  },
  "homepage": "https://github.com/DeterminateSystems/detsys-ts#readme",
  "dependencies": {
    "@actions/cache": "^4.0.5",
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "got": "^14.4.8",
    "type-fest": "^4.41.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^22.18.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "eslint": "^9.35.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "tsdown": "^0.14.2",
    "typedoc": "^0.28.12",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0",
    "vitest": "^3.2.4"
  }
